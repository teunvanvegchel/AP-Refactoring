<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="strategySelectionController" minHeight="700.0" minWidth="900.0" prefHeight="700.0" prefWidth="900.0" stylesheets="/style.css" xmlns:fx="http://javafx.com/fxml">
  <bottom>
    <HBox fx:id="statusBox" minHeight="25.0" prefHeight="25.0" prefWidth="800.0">
      <children>
        <Label id="tests" text="Status: Idle" />
      </children>
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" fx:id="x1" />
      </padding>
    </HBox>
  </bottom>
  <center>
    <VBox alignment="CENTER" padding="$x1" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
      <children>
        <Label fx:id="browseHelpText" text="Select a file, source folder or zip file to scan." id="select-file" />
        <Button fx:id="browseButton" mnemonicParsing="false" onAction="#selectSourceFiles" text="Select files..." />
        <Button fx:id="browseButton" mnemonicParsing="false" onAction="#selectSourceDirectory" text="Select folder..." />
        <Separator prefWidth="200.0">
          <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" fx:id="x1" />
          </VBox.margin>
        </Separator>
        <Label fx:id="selectedFile" text="Selected file:" visible="false" />
        <Label id="selectedFile" fx:id="selectedFilePath" visible="false">
          <font>
            <Font size="10.0" />
          </font>
        </Label>
      </children>
    </VBox>
  </center>
  <right>
    <VBox fx:id="optionsVbox" prefHeight="700.0" prefWidth="250.0" spacing="5.0">
      <children>
        <Label text="Refactor options:">
          <font>
            <Font name="System Bold" size="13.0" />
          </font>
        </Label>
        <Separator prefWidth="200.0" />
        <VBox fx:id="strategyOptions" prefHeight="549.0" prefWidth="330.0" spacing="10.0" />
        <Separator prefWidth="200.0" />
        <Button fx:id="analyzeButton" disable="true" mnemonicParsing="false" onAction="#analyze" prefWidth="326.0" text="Analyze" />
      </children>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
  </right>
  <stylesheets>
    <URL value="@../theme/styles/main.css" />
  </stylesheets>
</BorderPane>
